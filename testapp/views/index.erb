<div class="container">
  <a class="none"><%= @title = 'ログインページ' %></a>
  <h1 class="top-page__title">社内勤務管理</h1>
  <form>
    <div class="row">
      <div class="input-field col s12">
        <input type="number" id="user_id" class="validate" size="40">
        <label for="user_id">社員番号</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input type="password" id="password" class="validate" size"40">
        <label for="password">Password</label>
      </div>
    </div>
    <div>
      <button type="submit" class="btn waves-effect waves-light index__btn" id="login">ログイン</button>
    </form>
  </div>
  <div>
    <a type="button" class="waves-light btn index__btn" href=<%= "#{app_path}/register" %>>ユーザ登録</a>
  </div>
  <% content_for :javascript do %>
    <script type="text/javascript" src=<%= "#{js_path}/login.js" %>></script>
  <% end %>
</div>
