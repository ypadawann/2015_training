<div class="container">
  <nav class="admin-menu">
    <div class="nav-wrapper">
    </div>
  </nav>
  
  <div class="admin-pagename">管理画面ログイン</div>
  
  <div class="row admin-form">
    <form class="col s12">
      <div class="row">
	<div class="input-field col s12">
          <input id="admin-id" type="text" class="validate" autofocus>
          <label for="admin-id" class="active">Admin ID</label>
	</div>
      </div>
      <div class="row">
	<div class="input-field col s12">
          <input id="admin-password" type="password" class="validate">
          <label for="admin-password">Password</label>
	</div>
      </div>
      <div class="row">
	<div class="col s12">
	  <button type="submit" class="waves-effect waves-light btn admin-button" id="admin-login">ログイン</button>
	</div>
      </div>
    </form>
  </div>
  
</div>

