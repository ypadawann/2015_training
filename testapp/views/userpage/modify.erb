<h1>ユーザ情報管理</h1>
<p><div id="message"></div></p>
<p>ID:<span id="user-id"><%= @user_id %></span></p>
<p>名前:<input type="text" id="user-name" size="40"></p>
<p>所属：
  <select id="department">
    <option value="0" id="default_department"></option>
    <%==
       Model::Departments.list_ids.map { |d|
       "<option value=#{d}>#{Model::Departments.name_of(d)}</option>"
       }.join
       %>
  </select>
</p>
<p>new pass:<input type="password" id="new-password" size="40"></p>
<p>pass:<input type="password" id="password" size="40"></p>
<p>
  <input type="button" id="user-modify" class="button--design" value="変更">
</p>
<p>
  <input type="button" id="user-delete" class="button--design" value="削除">
</p>
